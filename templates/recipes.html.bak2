<!DOCTYPE html>
<html>
  <head>
    <title>All Recipes</title>
    <style>
      /* Set background theme */
      body {
        background-color: #e5e5e5;
        font-family: Arial, sans-serif;
      }
      /* Style the heading */
      h1 {
        text-align: center;
        color: #444;
        margin-top: 40px;
        margin-bottom: 20px;
        text-shadow: 2px 2px 5px #fff;
      }
      /* Style the list */
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      /* Style the list items */
      li {
        padding: 12px 16px;
        background-color: #fff;
        cursor: pointer;
        user-select: none;
        margin-bottom: 5px;
        border-radius: 5px;
        box-shadow: 2px 2px 5px #ccc;
        transition: background-color 0.3s ease;
      }
      /* Change background color of list item on hover */
      li:hover {
        background-color: #f2f2f2;
      }
      /* Hide the nested content by default */
      .nested {
        display: none;
        margin-left: 20px;
      }
      /* Show the nested content when the list item is clicked */
      .active {
        display: block;
      }
      /* Style the caret */
      .caret {
        /* display: inline-block; */
        /* width: 0;
        height: 0;
        margin-right: 5px; */
        vertical-align: middle;
        border-top: 5px solid #444;
        border-right: 5px solid transparent;
        border-left: 5px solid transparent;
      }
      /* Rotate the caret when the list item is active */
      /* .caret-down {
        transform: rotate(90deg);
        transition: transform 0.3s ease;
      } */
      /* Style the recipe details */
      .details {
        margin-top: 10px;
        margin-left: 20px;
        font-size: 14px;
        color: #666;
      }
      /* Style the search input */
      #search-input {
        padding: 8px;
        border: none;
        border-radius: 5px;
        box-shadow: 2px 2px 5px #ccc;
        transition: box-shadow 0.3s ease;
        font-size: 16px;
        margin-bottom: 20px;
      }

      /* Change box-shadow of search input on focus */
      #search-input:focus {
        outline: none;
        box-shadow: 2px 2px 10px #bbb;
      }
    </style>
  </head>
  <body>
    <h1>All Recipes</h1>
    <input class="" type="text" id="search-input" placeholder="Search...">
    <ul id="recipe-list">
      {% for recipe in recipes %}
        <li>
          <span class="caret">{{ recipe.name }}</span>
          <ul class="nested">
            <li>Ingredients: {{ recipe.ingredients }}</li>
            <li>Instructions: {{ recipe.instructions }}</li>
          </ul>
        </li>
      {% endfor %}
    </ul>





    <script>
      // Get the search input field
      var searchInput = document.getElementById("search-input");

      // Get the list of recipes
      var recipeList = document.getElementById("recipe-list");

      // Loop through all recipes and hide those that do not match the search query
      function filterRecipes() {
        var filter = searchInput.value.toUpperCase();
        var recipes = recipeList.getElementsByTagName("li");
        for (var i = 0; i < recipes.length; i++) {
          var recipeName = recipes[i].getElementsByTagName("span")[0];
          if (recipeName.innerHTML.toUpperCase().indexOf(filter) > -1) {
            recipes[i].style.display = "";
          } else {
            recipes[i].style.display = "none";
          }
        }
      }

      // Add event listener to the search input field
      searchInput.addEventListener("keyup", filterRecipes);
    </script>


    <script>
      /* Add functionality to the nested list */
      var toggler = document.getElementsByClassName("caret");
      var i;
      for (i = 0; i < toggler.length; i++) {
        toggler[i].addEventListener("click", function() {
          this.parentElement.querySelector(".nested").classList.toggle("active");
          this.classList.toggle("caret-down");
        });
      }
    </script>


  </body>
</html>
